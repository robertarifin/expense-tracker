<%- include ../partials/header.ejs %>
<%- include ../partials/navbar.ejs %>

<div class="container">
  <h2>Add expense form</h2>
  <%- include ../partials/alert.ejs %>
  <form action="/transaction/<%= id %>/add-income" method="POST">
    <div class="form-group">
      <label for="Category">Category:</label>
        <select name= "categoryId"">
                <% for (let i = 0; i < data.length; i++) { %>
                    <option value="<%= data[i].id %>"><%= data[i].categoryName %></option>
                <% } %>   
        </select>
    </div>
    <div class="form-group">
      <label for="date">Date:</label>
      <input type="date" class="form-control" id="date" placeholder="Enter date" name="date">
    </div>
    <div class="form-group">
        <label for="date">Price:</label>
        <input type="text" class="form-control" id="date" placeholder="Enter price" name="price">
      </div>
      <div class="form-group">
        <label for="date">Details:</label>
        <input type="text" class="form-control" id="date" placeholder="Enter details" name="detail">
      </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>

<%- include ../partials/footer.ejs %>