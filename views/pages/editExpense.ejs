<%- include ../partials/header.ejs %>
<%- include ../partials/navbar.ejs %>

<div class="container">
  <h2>Edit expense form</h2>
  <%- include ../partials/alert.ejs %>
  <form action="/transaction/<%= id %>/edit-expense" method="POST">
    <div class="form-group">
      <label for="price">Price:</label>
      <input type="text" class="form-control" placeholder="Enter price" name="price" value="<%= price %>" required>
    </div>
      <div class="form-group">
        <label for="date">Details:</label>
        <input type="text" class="form-control" id="date" placeholder="Enter details" name="detail" value="<%= description %>" required>
      </div>
      <button type="submit" class="btn btn-primary">Edit</button>
  </form>
</div>

<%- include ../partials/footer.ejs %>